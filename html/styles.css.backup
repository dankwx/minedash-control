body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
    font-family: 'Georgia', 'Times New Roman', serif;
}

.main-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    font-family: 'Geist Sans', sans-serif;

}

h1 {
    font-family: 'Geist Sans', sans-serif;
    font-size: 2.25rem;
    color: #e5e5e5;
    font-style: italic;
    letter-spacing: 0.025em;
    margin: 0;
}

@media (min-width: 768px) {
    h1 {
        font-size: 3rem;
    }
}

.pcs-container {
    display: flex;
    gap: 1rem;
}

@media (min-width: 768px) {
    .pcs-container {
        gap: 1.5rem;
    }
}

.pc {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
}

.pc-status {
    display: flex;
    align-items: center;
    gap: 0.375rem;
}

.status-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
}

.online {
    background: #22c55e;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.6);
}

.offline {
    background: #525252;
}

.pc-name {
    color: #a3a3a3;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    font-family: 'Geist Sans', sans-serif;
}

.pc-ip {
    color: #525252;
    font-size: 10px;
    font-family: monospace;
}

.image-container {
    position: relative;
    width: 16rem;
    height: 16rem;
}

@media (min-width: 768px) {
    .image-container {
        width: 20rem;
        height: 20rem;
    }
}

.image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.9;
}

nav {
    display: flex;
    gap: 2rem;
}

nav a {
    color: #737373;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: color 0.15s;
}

nav a:hover {
    color: #d4d4d4;
}

.footer {
    position: fixed;
    bottom: 2rem;
    color: #404040;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
}